<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2" >
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" id="title" class="form-control" required>  
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please ensure your title complies with required standards.</div>

        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="enter description" id="description" class="form-control" required></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please ensure your description complies with required standards.</div>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]" type="file" id="image" class="form-control">
            
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="1200"  id="price" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please provide valid Price</div>
            </div>

            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="India" type="text" id="country" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please provide valid country</div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Mumbai, Pune" type="text" id="location" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide valid location</div>
        </div>

        <div class="mb-3">
             <label for="category" class="form-label">Categories</label>
            <select name="listing[category]" class="form-control" required>
            <option value="">Select Category</option>
            <option value="Trending">Trending</option>
            <option value="Rooms">Rooms</option>
            <option value="Iconic Cities">Iconic Cities</option>
            <option value="Castles">Castles</option>
            <option value="Amazing pools">Amazing pools</option>
            <option value="Camping">Camping</option>
            <option value="Farms">Farms</option>
            <option value="Arctic">Arctic</option>
            <option value="Domes">Domes</option>
            <option value="Boats">Boats</option>
            </select>
        </div>
        
        <div class="mb-3 mt-3">
            <button class="btn btn-dark add-btn">Add</button>
        </div>
    </form>
    </div>
</div>


